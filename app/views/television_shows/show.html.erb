<h3><%= @television_show.title %></h3>

<ul>
  <li>Network: <%= @television_show.network %></li>
  <li>Years: <%= @television_show.years %></li>
</ul>

<div>
  <%= @television_show.synopsis %>
</div>

<%= form_for [@television_show, @character] do |f| %>

  <% if @character.errors.any? %>
    <ul>
      <% @character.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :actor %>
  <%= f.text_field :actor %><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br>

  <%= f.submit 'Submit' %>
<% end %>

<ul>
  <% @television_show.characters.each do |c| %>
    <li>
      <%= c.name %> - <%= c.actor %> - <%= c.description %>
    </li>
  <% end %>
</ul>
